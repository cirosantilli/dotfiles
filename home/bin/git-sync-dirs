#!/usr/bin/env bash

# List of Git important repositories to be synchronized.

all=false
while getopts a OPT; do
  case "$OPT" in
    a)
      all=true
      ;;
  esac
done

if $all; then
  for f in $(ls $PROGRAM_DIR); do
    f="$PROGRAM_DIR/$f"
    if [ -d "$f" ] && [ -d "$f/.git" ]; then
      echo "$f"
    fi
  done
else
  printf "\
${ALGORITHM_DIR}
${ANDROID_DIR}
${ART_DIR}
${BASH_DIR}
${CPP_DIR}
${DB_DIR}
${GIT_TUTORIAL_DIR}
${JAVA_DIR}
${LINUX_DIR}
${NETWORKING_DIR}
${NOTES_DIR}
${PYTHON_DIR}
${UBUNTU_DIR}
${WEBSITE_DIR}
${WEB_DIR}
"
fi
