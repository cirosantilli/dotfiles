[alias]
	st = status
	exec = "!exec "
	pushall = "!for i in `git remote`; do git push --all $i; done;"
[color]
	grep = auto
	ui = auto
[core]
	excludesfile = ~/.gitignore_global
	quotepath = false
	pager = less -r
[credential]
	helper = cache --timeout=900
[grep]
	extendedRegexp = true
	lineNumber = true
[mergetool]
	keepBackup = false
	prompt = false
; less -r to wrap long lines.
[pager]
	diff = diff-highlight | less -R
	log = diff-highlight | less -R
	show = diff-highlight | less -R
[push]
	default = current
[rerere]
	enabled = 1
[user]
	email = ciro.santilli@gmail.com
	name = Ciro Santilli
