[alias]
	st = status
	exec = "!exec "
[color]
	ui = auto
[core]
    excludesfile = ~/.gitignore_global
    quotepath = false
	pager = less -r
[credential]
	helper = cache
[grep]
	extendedRegexp = true
	lineNumber = true
[mergetool]
	keepBackup = false
	prompt = false
; less -r to wrap long lines.
[pager]
    diff = diff-highlight | less -R
    log = diff-highlight | less -R
    show = diff-highlight | less -R
[push]
	default = current
[rerere]
	enabled = 1
[user]
	email = ciro.santilli@gmail.com
	name = Ciro Santilli
